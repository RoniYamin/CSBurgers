<body>
   <a href="/" class="btn-back"><i class="bi bi-arrow-bar-right"></i></a>

    <header class="pageTitle">סניפים</header>

    <section class="search">
        <div class="search-wrapper">
            <input id="searchTxt" class="form-control" type="search" placeholder="מצא סניף" data-search />
        </div>
    </section>

    <main class="branches">
        <ol class="branches-list"></ol>

        <div id="nohide" class="nohide">
            <div id="addNewBranch">
                <i class="bi bi-plus-circle" id="addIcon"></i>
            </div>
        </div>
        
        <div id="hide" class="hide">
            <div id="info">
                <div class="inputs">
                    <input placeholder="שם הסניף" class="info-input" id="branchName">
                    <input placeholder="כתובת" class="info-input" id="address">
                    <input placeholder="שעות פעילות" class="info-input" id="Activity">
                    <input placeholder="קורדינטה אנכית" type="number" class="info-input" id="x">
                    <input placeholder="קורדינטה אופקית" class="info-input" id="y">
                </div>
                <div class="selection">
                    <select id="managers" class="form-select form-select-lg"></select>
                </div>
                <div class="buttons">
                    <button class="closeBtn">סגור</button>
                    <button class="saveBtn">שמור</button>
                </div>
            </div>
        </div>
    </main>
    
